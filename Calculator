<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator </title>
</head>

<body>
    <h2>Simple Calculator</h2>

    <input type="number" id="num1" placeholder="enter num1">
    <input type="number" id="num2" placeholder="enter num2                                                                                              ">

    <select id="operation">
        <option value="add">Add</option>
        <option value="sub">Subtract</option>
        <option value="multi">Multiply</option>
        <option value="div">Divide</option>
    </select>

    <button onclick="calculator()">click</button>

    <h2 id="result">result</h2>

    <script>

        function forOperater(a,b,op){
            if(op==="   add") return a+b;
            else if (op==="sub") return a-b;
            else if (op==="multi") return a*b;
            else if (op==="div") return b!==0?a/b: "Cannot divide by zero!";
            }
            function calculator(){
                let x = Number(document.getElementById("num1").value);
                let y = Number(document.getElementById("num2").value);
                let op = document.getElementById("operation").value;

                let result = forOperater(x,y,op);
                document.getElementById("result").innerText = "result : "+ result;

            }
            const summ =(a,b)=> a+b;

            console.log(summ(4,5));

            function greet(name = "bhaskar"){
                return `hello, ${name}`;
            }
            console.log(greet());
            console.log(greet("surya"));

            let user ={
                name: "bhaskar",
                age:19,
                city:"noida"
            };

            console.log(user.name);
            console.log(user["name"]);         
            const square = (b)=>b*b;
            
            console.log(square(6));

            function generateProfile(city="Unknown"){
                return city;
            }

    </script>


</body>

</html>
